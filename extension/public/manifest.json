{
  "manifest_version": 3,
  "name": "Gemini Phishing Detector",
  "version": "1.0",
  "description": "Gmail phishing detector using Gemini AI",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://mail.google.com/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "/icons/icon16.png",
      "48": "/icons/icon48.png",
      "128": "/icons/icon128.png"
    }
  }
}